<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quickFacts"
    android:background="@drawable/bg">

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:contentDescription="return"
        android:onClick="openDashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Quick Facts"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#009688"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="165dp"
        android:layout_height="187dp"
        android:layout_marginTop="320dp"
        android:backgroundTint="#E91E63"
        android:onClick="openFact3"
        android:text="Basic First Aid"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button15"
        android:layout_width="165dp"
        android:layout_height="187dp"
        android:layout_marginBottom="36dp"
        android:onClick="openFact5"
        android:backgroundTint="#E91E63"
        android:text="Taking care of your mental health"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="165dp"
        android:layout_height="187dp"
        android:layout_marginBottom="220dp"
        android:onClick="openFact6"
        android:backgroundTint="#E91E63"
        android:text="Suicide Intervention"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button17"
        android:layout_width="167dp"
        android:layout_height="187dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#E91E63"
        android:onClick="openFact2"
        android:text="Things to do when having panic attack"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button16"
        android:layout_width="165dp"
        android:layout_height="187dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="#E91E63"
        android:onClick="openFact4"
        android:text="Are you aware of your surroundings?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button18"
        android:layout_width="165dp"
        android:layout_height="187dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#E91E63"
        android:onClick="openFact1"
        android:text="Are You having Trouble Breathing?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>